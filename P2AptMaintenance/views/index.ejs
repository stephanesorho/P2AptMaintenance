<!DOCTYPE html>

<head>
  <title>
    Apartment Maintenance App
  </title>
  <%- include('./partials/css.ejs') %>
</head>

<body>
  <%- include("./partials/navBar.ejs") %>
    <h1>
      Apartment Maintenance System
    </h1>

    <%- include("./partials/errMsg.ejs") %>
      <div class="col-8">

        <h2>Users</h2>
        <div class="mb-1">
          <a href="/users/create" class="btn-primary btn">Create Tenant</a>
        </div>
        <table class="table table-dark table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Tenant Name</th>
              <th scope="col">Unit #</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          </tbody>

          <ul>
            <% users.forEach(function(user){ %>
              <tr>
                <th scope="row">
                  <%= user.user_id %>
                </th>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.apt_number %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <a type="button" href="/users/<%= user.user_id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                  <a type="button" href="/users/<%= user.user_id %>/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
              </tr>
              <% })%>
          </ul>
        </table>

        <%- include("./partials/footer.ejs") %>
</body>

</html>